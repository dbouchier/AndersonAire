@{
    ViewBag.Title = "Contact";
}
@model  AndersonAire.Models.ContactUs

<section class="section alt">
    @*<section class="section" id="promo" style="background-image: url(/images/sameday.jpg)">*@
    <div class="container" >
        <div class="row-fluid">
            <div class="hero-unit pull-center">
                <h1>For fast, friendly, same-day service, call us today.</h1>
            </div>
            @*<div class="span5">
                                <img alt="imac" class="pull-right" src="images/assets/imac.png" />
                            </div>*@
        </div>
    </div>
</section>
<section class="section">
    @*<section class="section" id="promo" style="background-image: url(/images/sameday.jpg)">*@
    <div class="container">
        <iframe width="100%" scrolling="no" height="400px" frameborder="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2753.354626665902!2d-94.12499868431112!3d46.36235168108416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x52b6ba1e83ae2801%3A0xc66f77ae84851ff9!2s14156+3+Mile+Rd+NE%2C+Brainerd%2C+MN+56401!5e0!3m2!1sen!2sus!4v1521926106569" marginwidth="0" marginheight="0"></iframe>
    </div>
</section>
<section class="section">
    <div class="container">
        <div class="page-header">
            <h1>
                We like talking
                <small>Feel free to reach out to us</small>
            </h1>
        </div>
        <div class="row-fluid">
            <div class="span6 span-false">
                <p>
                    We are located in Brainerd, serving the greater Brainerd / Baxter area.
                </p>
                <ul class="icons">
                    <li>
                        <p><i class="icon-home"></i>14156 3 Mile Road, Brainerd MN 56401
                        </p>
                    </li>
                    <li>
                        <p><i class="icon-phone"></i>218.821.3109
                        </p>
                    </li>
                    <li>
                        <p><i class="icon-envelope"></i>steve@andersonaire.com
                        </p>
                    </li>
                    <li>
                        <p><i class="icon-globe"></i>www.andersonaire.com
                        </p>
                    </li>
                </ul>
            </div>
            <div class="span6 span-false">
                <form class="form-horizontal" action="/Home/Contact" method="post">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="name">Name</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Name, new {@class="input-xlarge"})
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="email">Email</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Email, new { type="email", @class = "input-xlarge" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="subject">Subject</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Subject, new { @class = "input-xlarge" })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="message">Your message</label>
                            <div class="controls">
                                @Html.TextAreaFor(m => m.Message, new { @class = "input-xlarge", rows = 3 })
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button class="btn btn-primary" type="submit">Send email</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>